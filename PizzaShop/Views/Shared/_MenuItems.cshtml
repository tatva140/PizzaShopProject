 @model DAL.ViewModels.MenuItemsViewModel;
 <div>
        <div class="row mt-3 ms-1 ">
            <div class="row mt-3 mb-3" id="categoryaccordian">
            <div class=" col p-0">
            <div class="accordion accordion-flush mt-md-2 mt-0 shadow rounded-lg " id="accordionFlushExample">
                <div class="accordion-item">
                  <h2 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne" style="color:rgb(30, 151, 231);font-weight: 700; font-size: 25px;">
                      Category
                    </button>
                  </h2>
                  <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body ">
                        <div class="text-end">
                        <button class=" ms-3 " id="add" data-bs-toggle="modal" data-bs-target="#addModal"
                        style=" color: rgb(30, 151, 231); border: 2px solid rgb(30, 151, 231);background-color: rgb(250, 250, 250); "><i
                            class="fa-regular fa-plus"></i></button></div>
                        <ul class=" overflow-auto mt-2 p-0" style="max-height: 500px;">
                             @foreach(var category in Model.categories)
                                {
                            <a  style="text-decoration: none; color: black;cursor: pointer;" onclick="fetchItems(@category.CategoryId)">
                                <li style="list-style: none;">
                                    <div class="d-flex align-items-center justify-content-between actionshover">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="fa-solid fa-table me-2"></i>
                                            <div>@category.Name</div>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-end me-2 actions"  >
                                            <i class="fa-solid fa-pen me-3 ms-3" style="cursor: pointer; " data-bs-toggle="modal"
                                            data-bs-target="#editCategory" onclick="fetchCategoryDetails(@category.CategoryId)"></i>
                                            <i class="fa-solid fa-trash" style="cursor: pointer;" data-bs-toggle="modal"
                                                data-bs-target="#deleteCategory" onclick="setDeleteId(@category.CategoryId)"></i>
                                        </div>
                                    </div>
                                </li>
                            </a>
                           }
                        </ul>
                    </div>
                  </div>
                </div>
                </div>
            </div>
        </div>
            <div class="col-md-2 border  p-2 shadow rounded-lg" style="background-color: rgb(250, 250, 250);" id="category" >

                <div class="d-flex overflow-hidden  align-items-center justify-content-between w-auto p-2 ">
                    <div style="color: rgb(30, 151, 231); font-weight: 700; font-size: 25px; ">Category
                    </div>
                    <button class="text-end ms-3 " id="add" data-bs-toggle="modal" data-bs-target="#addModal"
                        style=" color: rgb(30, 151, 231); border: 2px solid rgb(30, 151, 231);background-color: rgb(250, 250, 250); "><i
                            class="fa-regular fa-plus"></i></button>
                </div>
                <ul class="p-2 overflow-auto mt-2" style="max-height: 500px;">
                      @foreach(var category in Model.categories)
                    {
                    <a style="text-decoration: none; color: black;cursor: pointer;" onclick="fetchItems(@category.CategoryId)">
                        <li style="list-style: none;">
                            <div class="d-flex align-items-center justify-content-between actionshover">
                                <div class="d-flex align-items-center justify-content-center mt-2">
                                    <i class="fa-solid fa-table me-2"></i>
                                    <div>@category.Name</div>
                                </div>
                                <div class="d-flex align-items-center justify-content-end me-2 actions"  >
                                    <i class="fa-solid fa-pen me-3 ms-3" style="cursor: pointer; " data-bs-toggle="modal"
                                    data-bs-target="#editCategory"  onclick="fetchCategoryDetails(@category.CategoryId)"></i>
                                    <i class="fa-solid fa-trash" style="cursor: pointer;" data-bs-toggle="modal"
                                        data-bs-target="#deleteCategory" onclick="setDeleteId(@category.CategoryId)"></i>
                                </div>
                            </div>
                        </li>
                    </a>
                   }
                  
                </ul>
            </div>
            <div class="col-xl-9 col border bg-white shadow rounded-lg">
                <div class="row">
                <div class="col-md-6 p-2  ">
                 <div class="d-flex align-items-center justify-content-between p-2" >
                    <div style="color: rgb(30, 151, 231); font-weight: 700; font-size: 25px; ">Items
                    </div>
                 <div class=" srchicon d-flex align-items-center justify-content-end p-2">
                    <span style=" font: 15px;"  ><i
                        class="fa-solid fa-search  me-2" ></i> </span>
                        <button class=" me-2 " data-bs-toggle="modal" data-bs-target="#deleteItem" style="background-color: white; border-radius: 5px;"><i
                            class="fa fa-trash"></i></button></div>
                            </div>
               </div>   
               <div class="col-xl-6 text-end p-2">
                 <div class="d-flex align-items-center justify-content-end p-2">
                 <div class="srch ms-2 " style="position:relative; ">
                   <input type="text" class="form-control " id="search" placeholder="Search" name="search"
                     style="position: relative;right: 10px;" onkeyup="search()">
                   <span style="position: absolute; right: 20px;top:50%; transform: translateY(-60%); font: 15px;"><i
                       class="fa-solid fa-search"></i> </span>
                 </div>
                 <button class=" dltbtn me-2 " data-bs-toggle="modal" data-bs-target="#deleteItem" style="background-color: white; border-radius: 5px;"><i
                    class="fa fa-trash"></i></button>
                 <button class="btn btn-primary " >+ New Item</button>
               </div>
            </div>
               </div>
               <div id="renderitems"></div>
            </div>
        </div>
    </div>
    <div class="modal" id="addModal">
        <div class="modal-dialog modal-dialog-centered ">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="color:rgba(9, 9, 172, 0.692) ;">Add Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="AddCategory" asp-controller="Menu" method="POST">
                <div class="modal-body"> 
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" asp-for="@Model.category.Name">
                        <label for="name">Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="Description" name="Description"
                            placeholder="Description"  asp-for="@Model.category.Description"></textarea>
                        <label for="description">Description</label>
                    </div>
                </div>
                <div class="modal-footer d-flex  align-items-center justify-content-end">
                <button type="submit" class="btn  me-2" style="background-color: rgba(9, 9, 172, 0.692);color:white">Add</button>
                <button type="button" class="btn" style="border-color:rgba(9, 9, 172, 0.692);  color:rgba(9, 9, 172, 0.692); background-color: white;"data-bs-dismiss="modal" aria-label="Close"     formnovalidate>Cancel</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal" id="editCategory">
        <div class="modal-dialog modal-dialog-centered ">

            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
               <form   method="POST" id="editForm">
                <div class="modal-body"> 
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="categoryName" name="Name" placeholder="Name" asp-for="@Model.category.Name">
                        <label for="name">Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="categoryDes" name="Description"
                            placeholder="Description"  asp-for="@Model.category.Description"></textarea>
                        <label for="description">Description</label>
                    </div>
                </div>
                <div class="modal-footer d-flex  align-items-center justify-content-end">
                <button type="submit" class="btn  me-2" style="background-color: rgba(9, 9, 172, 0.692);color:white">Edit</button>
                <button type="button" class="btn" style="border-color:rgba(9, 9, 172, 0.692);  color:rgba(9, 9, 172, 0.692); background-color: white;" data-bs-dismiss="modal" aria-label="Close" formnovalidate>Cancel</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal" id="deleteCategory">
        <div class="modal-dialog modal-dialog-centered ">
          <div class="modal-content">
    
            <div class="modal-body text-center">
              <img src="images/toppng.com-warning-icon-2400x2400.png" alt="Image" class="img-fluid me-2 "
              style="font: 30px; height: 80px;" class="">
              <h3>Are you sure you want to delete this category?</h3>
           <form id="deleteForm" method="post">
        <div class="modal-footer d-flex  align-items-center justify-content-center">
          <button type="submit" class="btn btn-danger align-items center" data-bs-dismiss="modal" >Yes</button>
          <button type="button" class="btn btn-primary align-items center" data-bs-dismiss="modal">No</button>
        </div>
        </form>
          </div>
        </div>
      </div>
    </div>
    <div class="modal" id="deleteItem">
        <div class="modal-dialog modal-dialog-centered ">
          <div class="modal-content">
    
            <div class="modal-body text-center">
              <img src="images/toppng.com-warning-icon-2400x2400.png" alt="Image" class="img-fluid me-2 "
              style="font: 30px; height: 80px;" class="">
              <h3>Are you sure you want to delete this user?</h3>
            <div class="modal-footer d-flex  align-items-center justify-content-center">
              <button type="button" class="btn btn-danger align-items center" data-bs-dismiss="modal">Yes</button>
              <button type="button" class="btn btn-primary align-items center" data-bs-dismiss="modal">No</button>
            </div>
          </div>
        </div>
      </div>
      </div>
     <script>
            $(document).ready(function () {
            $.ajax({
                url:"/Menu/CategoryItems",
                type: "GET",
                data:{id:@Model.categories[0].CategoryId},
                success:function(response){
                    $("#renderitems").html(response);
                }
            });
            });
            function fetchItems(id){
                $.ajax({
                url:"/Menu/CategoryItems",
                type: "GET",
                data:{id:id},
                success:function(response){
                    $("#renderitems").html(response);
                }
            });
            } 
            function fetchCategoryDetails(id){
                $.ajax({
                url:"/Menu/CategoryDetails",
                type: "GET",
                data:{id:id},
                success:function(response){
                    $('#categoryName').val(response.name);
                    $('#categoryDes').val(response.description);
                }
            });
      document.getElementById("editForm").action='@Url.Action("EditCategory","Menu")' + '?id=' + id;
            }
             function setDeleteId(id)
    {
      document.getElementById("deleteForm").action='@Url.Action("DeleteCategory","Menu")' + '?id=' + id;
    }
        </script>
    