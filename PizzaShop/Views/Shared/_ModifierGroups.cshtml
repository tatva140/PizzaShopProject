                                    <a onclick="allModifier(@Model.PageNumber-1,@Model.PageSize,@Model.TotalPages)"
                                        style="cursor:pointer;color:blue;">Previous</a>
                                }
                                Page @Model.PageNumber of @Model.TotalPages

                                @if (@Model.PageNumber < @Model.TotalPages)
                                {
                                    <a onclick="allModifier(@Model.PageNumber+1,@Model.PageSize,@Model.TotalPages)"
                                        style="cursor:pointer;color:blue;">Next</a>
                                }
                            </div>
                        </div> *@
                    </div>
                </div>
                <div class="modal-footer d-flex  align-items-center justify-content-end">
                    <button type="submit" class="btn  me-2"
                        style="background-color: rgba(9, 9, 172, 0.692);color:white">Add</button>
                    <button type="button" class="btn"
                        style="border-color:rgba(9, 9, 172, 0.692);  color:rgba(9, 9, 172, 0.692); background-color: white;"
                        data-bs-dismiss="modal" aria-label="Close" formnovalidate>Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        let modifierCount =@Model.modifierGroups.Count;
        let modifierId =@(Model.modifierGroups.Count > 0 ? Model.modifierGroups[0].ModifierGroupId : 0);

        $.ajax({
            url: "/Menu/Modifiers",
            type: "GET",
            data: { modifierId: modifierId },
            success: function (response) {
                $("#rendermodifiers").html(response);
            }
        });
    });
    function fetchModifiers(id) {
        $.ajax({
            url: "/Menu/Modifiers",
            type: "GET",
            data: { modifierId: id },
            success: function (response) {
                $("#rendermodifiers").html(response);
            }
        });
    }
