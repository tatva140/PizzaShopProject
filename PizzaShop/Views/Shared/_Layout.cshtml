<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaShopProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" asp-append-version="true" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

</head>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<body style="background-color: rgb(250, 250, 250)">
    @if (ViewData["HideLayout"] == "false")
    {
        <nav class="navbar navbar-expand-lg "  style="background-color:   rgba(0, 102, 167, 1);">
            <div class="container-fluid">
                <a class="navbar-brand" href="#" id="toggle" ><i class="fa-solid fa-bars"
                        style="color: #c4e1f7;font-size: 20px;"></i></a>
                <div class=" d-flex align-items-center justify-content-center">
                    <div id="partialViewRender"></div>

                    <a class="navToggle navbar-brand " id="navToggle"><i class="fa-solid fa-bars"
                            style="color: #c4e1f7;font-size: 20px;"></i></a>
                </div>
            </div>
            <div class="navdropdown " id="navDropdown">
                <ul style="list-style-type: none;">
                    <li><a asp-action="UserProfile" asp-controller="Dashboard"
                            style="text-decoration: none  ; color: black;"><i class="fa-solid fa-user me-1"></i>My
                            Profile</a></li>
                    <li><a asp-action="ChangePassword" asp-controller="Dashboard"
                            style="text-decoration: none  ; color: black;"> <i
                                class=" fa-regular fa-bell  w-20 h-20 me-1"></i>Change Password</a></li>
                    <li><a data-bs-toggle="modal" data-bs-target="#myModal"
                            style="text-decoration: none  ; color: black;"><i
                                class=" fa-regular fa-user  w-20 h-20 me-1"></i>Logout</a></li>
                </ul>
            </div>
        </nav>
        <div class="sidebar " id="sidebar">
            <ul >
                <li>
                    <div class="d-flex overflow-hidden  align-items-center justify-content-center w-auto p-0 ">
                        <img src="~/images/logos/pizzashop_logo.png" alt="Image" class="img-fluid me-2 "
                            style="font: 10px; height: 40px;">
                        <div style="color: rgb(30, 151, 231); font-weight: 700; font-size: 20px;">PIZZASHOP</div>
                        <a class="text-end ms-3" id="close" style=" font-size: 25px;"><i
                                class="fa-regular fa-circle-xmark"></i></a>
                    </div>
                </li>
                <a asp-action="Index" asp-controller="Dashboard" data-path="/Dashboard">
                    <li><i class="fa-solid fa-table me-2" class="active"></i>Dashboard</li>
                </a>
                <a  data-path="/User" data-redirect="Index" data-action="ViewPermission" data-controller="User" class="checkPermissions" style="cursor:pointer;">
                    <li><i class="fa-solid fa-users me-2"></i>Users</li>
                </a>
                <a  data-redirect="Index" data-action="ViewPermission" data-controller="RolesAndPermissions" class="checkPermissions" data-path="/RolesAndPermissions" style="cursor:pointer;">
                    <li><i class="fa-solid fa-user-plus me-2"></i>Role and Permission</li>
                </a>
                <a  data-redirect="Index" data-action="ViewPermission" data-controller="Menu" class="checkPermissions" data-path="/Menu" style="cursor:pointer;">
                    <li><i class="fa-regular fa-rectangle-list me-2"></i>Menu</li>
                </a>
                <a  data-redirect="Index" data-action="ViewPermission" data-controller="TablesAndSections" class="checkPermissions" data-path="/TablesAndSections" style="cursor:pointer;">
                    <li><i class="fa-solid fa-table me-2"></i>Tables and Sections</li>
                </a>
                <a  data-redirect="Index" data-action="ViewPermission" data-controller="TaxAndFees" class="checkPermissions" data-path="/TaxAndFees" style="cursor:pointer;">
                    <li><i class="fa-solid fa-file-invoice me-2"></i>Taxes and Fees</li>
                </a>
                <a  data-redirect="Index" data-action="ViewPermission" data-controller="Order" class="checkPermissions" data-path="/Order" style="cursor:pointer;">
                    <li><i class="fa-solid fa-bag-shopping me-2"></i>Orders</li>
                </a>
                <a  data-redirect="Index" data-action="ViewPermission" data-controller="Customer" class="checkPermissions" data-path="/Customer" style="cursor:pointer;">
                    <li><i class="fa-solid fa-users-rectangle me-2"></i>Customers</li>
                </a>
            </ul>
        </div>
        <div class="modal" id="myModal">
            <div class="modal-dialog modal-dialog-centered ">
                <div class="modal-content">
                    <div class="modal-body text-center">
                        <img src="~/images/toppng.com-warning-icon-2400x2400.png" alt="Image" class="img-fluid me-2"
                            style="font: 30px; height: 80px;">
                        <h3>Are you sure you want to Logout?</h3>
                        <form asp-action="Logout" asp-controller="Dashboard">
                            <div class="modal-footer d-flex  align-items-center justify-content-center">
                                <button type="submit" class="btn btn-danger align-items center"
                                    data-bs-dismiss="modal">Yes</button>
                                <button type="button" class="btn btn-primary align-items center"
                                    data-bs-dismiss="modal">No</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    <div>
        <partial name="_Notification" />
        @RenderBody()

    </div>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $.ajax({
                url: "@Url.Action("UserInfo", "Dashboard")",
                method: "GET",
                success: function (response) {
                    $("#partialViewRender").html(response);
                }
            })
        });
        let links=document.querySelectorAll(".sidebar a");
        let currentUrl=window.location.pathname;
        links.forEach(link=>{
            let linkPath=link.dataset.path;
            if(currentUrl.startsWith(linkPath)){
                link.classList.add("active");
            }else{
                link.classList.remove("active");
            }
        })
            
       $(document).on('click','.checkPermissions',function(e){
            e.preventDefault();
            let controller=$(this).data("controller");
            let action=$(this).data("action");
            let isModal=$(this).data("target");
            let redirect=$(this).data("redirect");
            $.ajax({
                url: `/${controller}/${action}`,
                method: "GET",
                success: function (response) {
                    if(isModal){
                        $(`#${isModal}`).modal("show");
                    }else if(redirect){
                        window.location.href=`/${controller}/${redirect}`;
                    }
                },
                error:function(xhr){
                    if(xhr.status===403){
                        toastr.error("Access Denied");
                    }
                }
            })
            })

   
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
