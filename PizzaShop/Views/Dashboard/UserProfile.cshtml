 @model DAL.ViewModels.UserProfileViewModel; 


@{
    ViewData["Title"] = "UserProfile";
    ViewData["HideLayout"]="false";
}

<div class="content" id="content">
      <div class="row ">
                <div class="col-md-6 mt-3 mb-3 col-8 ">
                     <h1  style="color: rgb(30, 151, 231);font-weight: 600;">My Profile</h1>
          
                </div>
            <form asp-action="UserProfile" asp-controller="Dashboard" method="post" enctype="multipart/form-data">
            <div class="row ms-3 me-3" style="background-color: white; border-radius: 8px; ">
            <div style="height: 150px;" class="p-0 ">
            <div class="row " ><img src="~/images/profile_div_bg.jpg" style=" height: 70px;" class=""></div>
            <div class="row">
               <div class="col-lg-1 d-none d-xxl-block  position-relative">
                        <img src="@Model.ProfileImg" class="profile rounded-pill img-fluid" alt="Profile Picture"
                            style="width: 100px; height: 100px;margin-left:10px;position: absolute;  transform: translateY(-40%);background-color: white;">
                        <div  style="bottom:20px;right:15px;position: absolute;">
                        <i class="fa-solid fa-camera  "style="font-size:20px;"></i>
                    <input type="file" id="filename" class="form-control "  name="ProfileImg" accept="image/*" asp-for="ProfileImg"
                        style="opacity: 0.0; position: absolute; top:0; left: 0; bottom: 0; right:0; width: 100%; height:100%;" />
                    </div>
                    </div>
                        <div class="col col-lg-11 ">
                        <div class="d-flex align-items-center justify-content-between">
                        <h5 class="  mt-1">@Model.FirstName @Model.LastName</h5>
                        <h5 class=" text-end mt-1">@Model.Email</h5>
                        </div>
                        <h5 class=" mt-1">@Model.RoleName</h5>
                        </div>
            </div>
            </div>
                <input type="text" class="form-control" id="email" name="Email" asp-for="Email"
                            hidden>
                 <select class="form-select" id="isActive" name="isActive" asp-for="isActive" hidden>
                            <option value="true"></option>
                </select>
            <div class="row mt-2    ">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="firstname" name="FirstName" asp-for="FirstName"
                            placeholder="First Name" >
                        <label for="firstname">First Name</label>
                    </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="LastName" placeholder="Last Name" asp-for="LastName">
                        <label for="lastname">Last Name</label>
                    </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2 ">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="username" name="UserName" placeholder="User Name" asp-for="UserName">
                        <label for="username">Username</label>
                    </div>
                </div>
                 <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control" id="phone" name="Phone" placeholder="Phone" 
                             asp-for="Phone">
                        <label for="phone">Phone</label>
                    </div>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2 ">
                <div class="col-md-4">
                    <div class="form-floating mb-3">
                        <select class="form-select" id="country" name="Country" asp-for="Country">
                            <option value="@Model.Country">@Model.CountryName</option>
                        </select>
                        <label for="country" class="form-label">Country</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating mb-3">
                        <select class="form-select" id="state" name="State" asp-for="State"  >
                             <option value="@Model.State">@Model.StateName</option>
                        </select>
                        <label for="state" class="form-label">State</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating mb-3">
                        <select class="form-select" id="city" name="City" asp-for="City" >
                              <option value="@Model.City">@Model.CityName</option>
                        </select>
                        <label for="city" class="form-label">City</label>
                    </div>
                </div>
            </div>
            <div class="row mt-2 ">
                <div class="col-md-7">
                    <div class="form-floating mb-4 mb-md-0">
                        <input type="text" class="form-control" id="address" name="Address" placeholder="Address" asp-for="Address">
                        <label for="address">Address</label>
                    </div>
                </div>
                 <div class="col-md-5">
                    <div class="form-floating mb-3 mb-md-0">
                        <input type="text" class="form-control" id="zipcode" name="ZipCode" placeholder="Zipcode" asp-for="ZipCode">
                        <label for="zipcode">Zipcode</label>
                    </div>
                        <span asp-validation-for="ZipCode" class="text-danger"></span>

                </div>
               
            </div>
            <div class="d-flex justify-content-end mt-3 mb-3 ">
                <button type="submit" class="btn  me-2" style="background-color: rgba(9, 9, 172, 0.692);color:white">Update</button>
                <button type="submit" class="btn" style="border-color:rgba(9, 9, 172, 0.692);  color:rgba(9, 9, 172, 0.692); background-color: white;" asp-action="Index" asp-controller="Dashboard" formnovalidate>Cancel</button>
            </div>
            </form>
            </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

   <script>
   
    $(document).ready(function(){

    $.ajax({
        url:"@Url.Action("GetRoles","User")",
        type:"GET",
        accepts:"application/json",
        contentType:"application/json",
        success:function(data){
            $.each(data,function(i,item){  
                $("#role").append('<option value="'+item.roleId+'">'+item.roleName+'</option>');
            })
        }
    })
    $.ajax({
        url:"@Url.Action("GetCountries","User")",
        type:"GET",
        accepts:"application/json",
        contentType:"application/json",
        success:function(data){
            $.each(data,function(i,item){         
                $("#country").append('<option value="'+item.countryId+'">'+item.countryName+'</option>');
            })
        }
    })
         $('#country').change(function()
            {
                let countryId=$(this).val();
                $("#state").empty();
                $("#city").empty();

                if(countryId){
                   $.ajax({
                    url:"@Url.Action("GetStateByCountry","User")",
                    data:{countryId:countryId},
                    success:function(data){
                        $.each(data,function(index,state){
                            $("#state").append('<option value="'+state.stateId+'">'+state.stateName+'</option>');
                        })
                    }
                   })
                }
            })
   
    $('#state').change(function()
            {
                let stateId=$(this).val();
                $("#city").empty();

                if(stateId){
                   $.ajax({
                    url:"@Url.Action("GetCityByState","User")",
                    data:{stateId:stateId},
                    success:function(data){
                        $.each(data,function(index,city){
                            $("#city").append('<option value="'+city.cityId+'">'+city.cityName+'</option>');
                        })
                    }
                   })
                }
            })
   });

    </script>
    <script>
        document.getElementById("filename").addEventListener('change',function(e)
        {
            const file=e.target.files[0];
    if(file)
    {
        const reader=new FileReader();
        reader.onload=function(e){
            document.getElementById("filename").src=e.target.result;
        };
        reader.readAsDataURL(file);
    }
        })
    </script>
}

