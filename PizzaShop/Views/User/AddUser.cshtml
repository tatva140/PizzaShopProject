@model DAL.ViewModels.AddUserViewModel;
@{
    ViewData["Title"] = "Add User";
    ViewData["HideLayout"]="false";
}
 <div class="content p-3" id="content">
            <div class="row ">
                <div class="col-md-6 p-0 col-8 ">
                     <h1  style="color: rgb(30, 151, 231);font-weight: 600;">Add New
                        Users</h1>
          
                </div>
                
                <div class="col-md-6 d-flex align-items-center justify-content-end p-0 col-4">
                    <a class="btn btn-primary d-sm-block d-none" asp-action="Index" asp-controller="User">
                        < Back</a>
                    <a class="btn btn-primary d-sm-none d-block" asp-action="Index" asp-controller="User">
                        < </a>
                </div>
              </div>
            

            
        <div class="row  mt-2" style="background-color: white; border-radius: 8px;">
            <form>
            <div class="row mt-2    ">
                <div class="col-md-6">
                        <div class="input-group mb-3">
                            <input id="FirstName" asp-for="FirstName" class="form-control " type="text" name="FirstName"
                                placeholder="FirstName" aria-label="FirstName">
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                          
                </div>
                <div class="col-md-6">
                     <div class="input-group mb-3">
                            <input id="LastName" asp-for="LastName" class="form-control " type="text" name="LastName"
                                placeholder="LastName" aria-label="LastName">
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2 ">
                <div class="col-md-6">
                    <div class="input-group mb-3">
                            <input id="UserName" asp-for="UserName" class="form-control " type="text" name="UserName"
                                placeholder="UserName" aria-label="UserName">
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>

                </div>
                @* <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <select class="form-select" id="role" name="role">
                            <option>Admin</option>
                            <option>Chef</option>
                            <option>Manager</option>
                        </select>
                        <label for="role" class="form-label">Role</label>
                    </div>
                </div>
            </div> *@
            <div class="row mt-2 ">
                <div class="col-md-6">
                     <div class="input-group mb-3">
                            <input id="Email" asp-for="Email" class="form-control " type="email" name="Email"
                                placeholder="Email" aria-label="Email">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                </div>
               <div class="col-md-6">
                     <div class="input-group mb-3">
                            <input  asp-for="Password" class="form-control " type="password" name="Password"
                                placeholder="Password" aria-label="Password" id="pwd">
                            <span class="input-group-text"><i class="fas fa-eye" id="eye"></i></span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2 ">
                <div style="position: relative; margin-left: 12px;">
                    <div class="d-flex row align-items-center justify-content-center  text-center border border-danger  p-2"
                        style="width: 100%;border-radius: 5px;">
                        <i class="fa-solid fa-cloud-arrow-up"></i>
                        <div class="flex" style="color: rgb(109, 21, 21);">Upload</div>
                    </div>
                    <input type="file" id="filename"
                        style="opacity: 0.0; position: absolute; top:0; left: 0; bottom: 0; right:0; width: 100%; height:100%;" asp-for="ProfileImg"/>
                </div>
                <div class="fileinfo" id="fileinfo" style="color: red;">
                    No file Selected
                </div>
            </div>
            <div class="row mt-2 ">
                <div class="col-md-4">

                    <div class="form-floating mb-3">
                        <select class="form-select" id="country" name="country">
                            <option>Admin</option>
                            <option>Chef</option>
                            <option>Manager</option>
                        </select>
                        <label for="country" class="form-label">Country</label>
                    </div>
                </div>
                <div class="col-md-4">

                    <div class="form-floating mb-3">
                        <select class="form-select" id="state" name="state">
                            <option>Admin</option>
                            <option>Chef</option>
                            <option>Manager</option>
                        </select>
                        <label for="state" class="form-label">State</label>
                    </div>
                </div>
                <div class="col-md-4">

                    <div class="form-floating mb-3">
                        <select class="form-select" id="city" name="city">
                            <option>Admin</option>
                            <option>Chef</option>
                            <option>Manager</option>
                        </select>
                        <label for="city" class="form-label">City</label>
                    </div>
                </div>
            </div>
            <div class="row mt-2 ">
                <div class="col-md-4">
                     <div class="input-group mb-3">
                            <input id="ZipCode" asp-for="ZipCode" class="form-control " type="number" name="ZipCode"
                                placeholder="ZipCode" aria-label="ZipCode">
                        </div>
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                
                <div class="col-md-4">
                    <div class="input-group mb-3">
                            <input id="Address" asp-for="Address" class="form-control " type="number" name="Address"
                                placeholder="Address" aria-label="Address">

                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                   <div class="input-group mb-3">
                            <input id="Phone" asp-for="Phone" class="form-control " type="number" name="Phone"
                                placeholder="Phone" aria-label="Phone">

                        </div>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
        </form>
            @* <div class="d-flex p-3 ">
                <button type="submit" class="btn btn-primary me-2">Create User</button>
                <button type="submit" style="border-color:rgb(30, 151, 231); ; color:rgb(30, 151, 231); background-color: white;" onclick="window.open('users-list','_self')">Cancel</button>
            </div> *@
        </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
