@model DAL.ViewModels.UserProfileViewModel;
@{
     ViewData["HideLayout"]="false";
}
 <div class="content p-3" id="content">
            <div class="row ">
                <div class="col-md-6 p-0 col-8 ">
                     <h1  style="color: rgb(30, 151, 231);font-weight: 600;">Edit
                        Users</h1>
          
                </div>
                
                <div class="col-md-6 d-flex align-items-center justify-content-end p-0 col-4">
                    <a class="btn btn-primary d-sm-block d-none" asp-action="Index" asp-controller="User">
                        < Back</a>
                    <a class="btn btn-primary d-sm-none d-block" asp-action="Index" asp-controller="User">
                        < </a>
                </div>
              </div>
 
        <div class="row  mt-2" style="background-color: white; border-radius: 8px;">
            <form asp-action="EditUsers" asp-controller="User" method="post">
            <div class="row mt-2    ">
                <div class="col-md-6">
                        <div class="input-group mb-3">
                            <input id="FirstName" asp-for="FirstName" class="form-control " type="text" name="FirstName"
                                placeholder="FirstName" aria-label="FirstName">
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                          
                </div>
                <div class="col-md-6">
                     <div class="input-group mb-3">
                            <input id="LastName" asp-for="LastName" class="form-control " type="text" name="LastName"
                                placeholder="LastName" aria-label="LastName">
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2 ">
                <div class="col-md-6">
                    <div class="input-group mb-3">
                            <input id="UserName" asp-for="UserName" class="form-control " type="text" name="UserName"
                                placeholder="UserName" aria-label="UserName">
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>

                </div>
                <div class="col-md-6">
                   <select class="form-select" id="role" name="RoleId" asp-for="RoleId">
                            <option value="@Model.RoleId">@Model.RoleName</option>
                    </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>

                </div>
            </div> 
            <div class="row mt-2 ">
                <div class="col-md-6">
                     <div class="input-group mb-3">
                            <input id="Email" asp-for="Email" class="form-control " type="email" name="Email"
                                placeholder="Email" aria-label="Email" readonly>
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                </div>
               <div class="col-md-6">
                     <div class="input-group mb-3">
                      <select class="form-select" id="status" name="isActive" asp-for="isActive" >
                            <option value="@Model.isActive">@(Model.isActive?"Active":"InActive")</option>
                            <option value="false">InActive</option>
                        </select>
                </div>
            </div>
            <div class="row mt-2 ">
                <div style="position: relative; margin-left: 12px;">
                    <div class="d-flex row align-items-center justify-content-center  text-center border border-danger  p-2"
                        style="width: 100%;border-radius: 5px;">
                        <i class="fa-solid fa-cloud-arrow-up"></i>
                        <div class="flex" style="color: rgb(109, 21, 21);">Upload</div>
                    </div>
                    <input type="file" id="filename" class="form-control "  name="ProfileImg" 
                        style="opacity: 0.0; position: absolute; top:0; left: 0; bottom: 0; right:0; width: 100%; height:100%;" />
                </div>
            </div>
            <div class="row mt-3 ">
                <div class="col-md-4">

                    <div class="form-floating mb-3">
                        <select class="form-select" id="country" name="Country" asp-for="Country" >
                            <option value="@Model.Country">@Model.CountryName</option>
                        </select>
                        
                    </div>
                </div>
                <div class="col-md-4">

                    <div class="form-floating mb-3">
                          <select class="form-select" id="state" name="State" asp-for="State"  >
                             <option value="@Model.State">@Model.StateName</option>
                        </select>
                        <label for="state" class="form-label">State</label>
                    </div>
                </div>
                <div class="col-md-4">

                    <div class="form-floating mb-3">
                         <select class="form-select" id="city" name="City" asp-for="City" >
                              <option value="@Model.City">@Model.CityName</option>
                        </select>
                        <label for="city" class="form-label">City</label>
                    </div>
                </div>
            </div>
            <div class="row mt-2 ">
                <div class="col-md-4">
                     <div class="input-group mb-3">
                            <input id="ZipCode" asp-for="ZipCode" class="form-control " type="number" name="ZipCode"
                                placeholder="ZipCode" aria-label="ZipCode" >
                        </div>
                        <span asp-validation-for="ZipCode" class="text-danger"></span>

                </div>
                
                <div class="col-md-4">
                    <div class="input-group mb-3">
                            <input id="Address" asp-for="Address" class="form-control " type="text" name="Address"
                                placeholder="Address" aria-label="Address" >

                        </div>
                </div>
                <div class="col-md-4">
                   <div class="input-group mb-3">
                            <input id="Phone" asp-for="Phone" class="form-control " type="number" name="Phone"
                                placeholder="Phone" aria-label="Phone" >
                        </div>
                        <span asp-validation-for="Phone" class="text-danger"></span>

                </div>
            </div>
            <div class="d-flex justify-content-end mt-3 mb-3 ">
                <button type="submit" class="btn  me-2" style="background-color: rgba(9, 9, 172, 0.692);color:white">Edit</button>
                <a type="submit" class="btn" style="border-color:rgba(9, 9, 172, 0.692);  color:rgba(9, 9, 172, 0.692); background-color: white;"  asp-action="Index" asp-controller="User" formnovalidate>Cancel</a>
            </div>
        </form>
        </div>

@section Scripts{
      @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
   
    $(document).ready(function(){

    $.ajax({
        url:"@Url.Action("GetRoles","User")",
        type:"GET",
        accepts:"application/json",
        contentType:"application/json",
        success:function(data){
            $.each(data,function(i,item){  
                $("#role").append('<option value="'+item.roleId+'">'+item.roleName+'</option>');
            })
        }
    })
    $.ajax({
        url:"@Url.Action("GetCountries","User")",
        type:"GET",
        accepts:"application/json",
        contentType:"application/json",
        success:function(data){
            $.each(data,function(i,item){         
                $("#country").append('<option value="'+item.countryId+'">'+item.countryName+'</option>');
            })
        }
    })
         $('#country').change(function()
            {
                let countryId=$(this).val();
                if(countryId){
                   $.ajax({
                    url:"@Url.Action("GetStateByCountry","User")",
                    data:{countryId:countryId},
                    success:function(data){
                        $.each(data,function(index,state){
                            $("#state").append('<option value="'+state.stateId+'">'+state.stateName+'</option>');
                        })
                    }
                   })
                }
            })
   
    $('#state').change(function()
            {
                let stateId=$(this).val();
                if(stateId){
                   $.ajax({
                    url:"@Url.Action("GetCityByState","User")",
                    data:{stateId:stateId},
                    success:function(data){
                        $.each(data,function(index,city){
                            $("#city").append('<option value="'+city.cityId+'">'+city.cityName+'</option>');
                        })
                    }
                   })
                }
            })
   });

    </script>
}
