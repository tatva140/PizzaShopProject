 @model DAL.ViewModels.ForgotPasswordViewModel
@{
   
    ViewData["HideLayout"]="true";
}   
    
  
    <div class="d-flex align-items-center justify-content-center vh-100">
        <div class="row   " style="height: 100%;" >
            <div class="col-md-6 p-0 " id="background-img">
                <img src="~/images/dominos_background.jpg" alt="Image" class=" img-fluid  "
                    style="object-fit: cover; height: 100%; ">
            </div>
            <div class="col-md-6 d-flex p-0 align-items-center justify-content-center info">
                <div class="w-75">
                    <div class="d-flex overflow-hidden  align-items-center justify-content-center w-auto p-0 mt-3">
                        <img src="~/images/logos/pizzashop_logo.png" alt="Image" class="img-fluid me-2 "
                            style="font: 16px; height: 55px;">
                        <h4 style="color: rgb(59, 161, 230);" >PIZZASHOP</h4>
                    </div>
                    <div class="row align-items-center justify-content-center p-0">
                        <h4 class=" mt-4 w-75">Forgot Password</h4>
                        <div class="mt-4 w-75" style="font-size: 20px; font-style: normal; word-wrap: break-all;">Please enter a valid email, a reset password link will be sent to you.</div>

                        <form class="w-75" asp-action="ForgotPassword" method="post">
                            <div class=" mt-3 ">
                                 <div class="input-group mb-3">
                            <input id="username" asp-for="Email" class="form-control " type="text" name="email"
                                placeholder="Email" aria-label="Email">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>

                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>    
                               
                            </div>
                              @if(ViewBag.Message !=null){
                                <p>@ViewBag.Message</p>
                                 }
    
                             <div class="mt-4 "><button type="submit" class="btn btn-primary w-100 "
                                style="border-radius: 5px;" >Send</button>
                            </div>
                        <div class="mt-2 text-center"><a  asp-controller="Home" asp-action="Index" >Back To Login</a></div>
                        </form>
                        
                    </div>

                </div>
            </div>

        </div>
    </div>